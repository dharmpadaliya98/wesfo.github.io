@code
{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            ToggleSlider();
        }
    }

    protected async void ToggleSlider()
    {
        await _js.InvokeVoidAsync("vegasSlider");
    }
}